programa
{
    // Função que gera um número aleatório entre 1 e 100
    funcao inteiro gerarNumeroAleatorio()
    {
        inteiro numero
        numero <- inteiro(aleatorio() * 100) + 1
        retorne numero
    }

    funcao inicio()
    {
        inteiro secreto, tentativa, tentativas, i
        logico acertou
        vetor historico[5] de inteiro // guarda as últimas tentativas

        secreto <- gerarNumeroAleatorio()
        tentativas <- 0
        acertou <- falso

        escreva("\n=== JOGO: ADIVINHE O NÚMERO ===\n")
        escreva("Tente adivinhar o número entre 1 e 100!\n\n")

        enquanto (acertou = falso) e (tentativas < 5) faca
        {
            escreva("Tentativa ", tentativas + 1, ": ")
            leia(tentativa)

            historico[tentativas] <- tentativa
            tentativas <- tentativas + 1

            se (tentativa = secreto) entao
                escreva("\nParabéns! Você acertou o número!\n")
                acertou <- verdadeiro
            senao
                se (tentativa < secreto) entao
                    escreva("O número secreto é MAIOR!\n\n")
                senao
                    escreva("O número secreto é MENOR!\n\n")
                fimse
            fimse
        }

        se (acertou = falso) entao
            escreva("\nVocê perdeu! O número secreto era: ", secreto, "\n")
        fimse

        escreva("\n--- HISTÓRICO DE TENTATIVAS ---\n")
        para (i <- 0; i < tentativas; i <- i + 1) faca
            escreva("Tentativa ", i + 1, ": ", historico[i], "\n")
        fimpara

        escreva("\nFim do jogo. Obrigado por jogar!\n")
    }
}