algoritmo "Adivinhe_o_Numero"

// Função que gera um número aleatório entre 1 e 100
funcao inteiro gerarNumeroAleatorio()
var
    numero: inteiro
inicio
    numero <- inteiro(aleatorio() * 100) + 1
    retorne numero
fimalgoritmo

var
    secreto, tentativa, tentativas, i: inteiro
    acertou: logico
    historico: vetor[1..5] de inteiro

inicio
    secreto <- gerarNumeroAleatorio()
    tentativas <- 0
    acertou <- falso

    escreval("=== JOGO: ADIVINHE O NÚMERO ===")
    escreval("Tente adivinhar o número entre 1 e 100!")
    escreval("Você tem 5 tentativas.")
    escreval("")

    enquanto (acertou = falso) e (tentativas < 5) faca
        escreva("Tentativa ", tentativas + 1, ": ")
        leia(tentativa)

        historico[tentativas + 1] <- tentativa
        tentativas <- tentativas + 1

        se (tentativa = secreto) entao
            escreval("")
            escreval("Parabéns! Você acertou o número!")
            acertou <- verdadeiro
        senao
            se (tentativa < secreto) entao
                escreval("O número secreto é MAIOR!")
            senao
                escreval("O número secreto é MENOR!")
            fimse
            escreval("")
        fimse
    fimenquanto

    se (acertou = falso) entao
        escreval("Você perdeu! O número secreto era: ", secreto)
    fimse

    escreval("")
    escreval("--- HISTÓRICO DE TENTATIVAS ---")
    para i de 1 ate tentativas faca
        escreval("Tentativa ", i, ": ", historico[i])
    fimpara

    escreval("")
    escreval("Fim do jogo. Obrigado por jogar!")
fimalgoritmo